let n = 7
// DO NOT ALTER THE TEXT BETWEEN THESE LINES =========={M{E{R{L{I{N{1}N}I}L}R}E}M}=====================================
// ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧  ⇧


// Add your code below:

var count = n

if n > 0{
    while count >= 1{
        print("Calculating factorial(\(count))...")
        count -= 1
    }
    print("Terminal case, returning 1.")
}

else{
    print("Calculating factorial(\(n))...")
    print("Terminal case, returning 1.")
    print("The final result is: 1.")
}




count = n

if n >= 1{
    var num1 = 1
    var num2 = 2
    while count > 1{
        
        let result = num1*num2
        print("Non-terminal case, returningresult)

        count -= 1
        num2 += 1
        num1 = result
    }
}
